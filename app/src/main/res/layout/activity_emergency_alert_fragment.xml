<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.careyoutbaby.swetarabi.babycare.EmergencyAlertFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140sp"
        app:srcCompat="@drawable/messagealert"
        android:layout_marginTop="35dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="@string/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:background="@color/appColor"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:onClick="next_emergency_alert"/>

    <TextView
        android:text="@string/you_can_change_this_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView11"
        android:textColor="@color/lightblack"
        android:fontFamily="sans-serif-light"
        android:textSize="12sp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/set_alerts_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/appColor"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Automatically notification message ,send alert message to specified person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_above="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:textAlignment="center"/>

</RelativeLayout>
