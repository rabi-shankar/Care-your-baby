<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.careyoutbaby.swetarabi.babycare.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_launcher"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:elevation="1dp"
            app:srcCompat="@drawable/ic_pin_drop_black_24dp"
            tools:ignore="ContentDescription" />


        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:text="@string/start"
            android:elevation="1dp"
            android:textColor="@color/appColor"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="124dp" />

    </RelativeLayout>

    <TextView
        android:text="@string/see_your_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:text="Last seen: 06:37 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:textColor="@color/lightwhite"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:id="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:background="@color/white">


        <ImageView
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gps"
            android:id="@+id/imageView4"
            android:padding="5sp"/>

        <TextView
            android:text="@string/intro_sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textSize="15sp"
            android:paddingTop="12sp"
            android:paddingLeft="2sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <TextView
        android:text="@string/monitoring_your_nchild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
